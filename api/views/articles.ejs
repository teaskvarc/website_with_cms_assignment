<!DOCTYPE>

<html>
<head>

    <link href="/static/css/main.css" rel="stylesheet">


</head>
<body>

    <h1>Articles</h1>

    <div class="articles-container">

            <% for(var i=0; i<articles.length; i++){ %>

                <div class="article-container">

                    <div class="article-title"> <%- articles[i].title  %> </div>
                    <br/>
                    <div class="article-author"> <%- articles[i].author %> </div>
                    <br/>
                    <div class="article-published"> <%-  moment(articles[i].published).format('DD:MM:YYYY')  %> </div>
                    <br/>

                    <a href="/article/<%- articles[i].id %>"> Read more ... </a>
                    <hr/>
                </div>

            <% } %>
    </div>

</body>
</html>